<wizard version="1" kind="class" id="A.Model" category="B.Rubus">
    <description>Creates a AdvItemModel implementation</description>
    <displayname>AdvItemModel implementation</displayname>;
    <displaycategory>Rubus</displaycategory>
    <files>
        <file source="model.cpp" target="%ClassName:l%.%CppSourceSuffix%" openeditor="true"/>
		<file source="model.h" target="%ClassName:l%.%CppHeaderSuffix%" openeditor="true"/>
    </files>
    <fieldpagetitle>Model parameters</fieldpagetitle>
    <fields>
        <field name="ClassName">
            <fieldcontrol class="QLineEdit" validator="^[a-zA-Z0-9_]+$" defaulttext="CustomerModel" placeholdertext="Enter a class name"/>
            <fielddescription>Class name:</fielddescription>
        </field>
	</fields>

    <validationrules>
        <validationrule condition='"%ClassName%" != "QWidget"'>
            <message>%ClassName% cannot be used as class name.</message>
        </validationrule>
    </validationrules>
</wizard>
