<wizard version="1" kind="class" id="A.TableDialog" category="B.Rubus">
    <description>Creates a QDialog implementation with CRUD interface.</description>
    <displayname>QDialog implementation with CRUD interface</displayname>;
    <displaycategory>Rubus</displaycategory>
    <files>
        <file source="tabledialog.cpp" target="%ClassName:l%.%CppSourceSuffix%" openeditor="true"/>
		<file source="tabledialog.h" target="%ClassName:l%.%CppHeaderSuffix%" openeditor="true"/>
        <file source="tabledialog.ui" target="%ClassName:l%.ui" openeditor="true"/>
    </files>
    <!-- Create parameter wizard page -->
    <fieldpagetitle>TableDialog parameters</fieldpagetitle>
    <fields>
        <field name="ClassName">
            <fieldcontrol class="QLineEdit" validator="^[a-zA-Z0-9_]+$" defaulttext="CustomerTableDialog" placeholdertext="Enter a class name"/>
            <fielddescription>Class name:</fielddescription>
        </field>
        <field name="ModelClass">
            <fieldcontrol class="QLineEdit" validator="^[a-zA-Z0-9_]+$" defaulttext="CustomerModel" placeholdertext="Enter a class name"/>
            <fielddescription>Model class:</fielddescription>
        </field>
        <field name="ModelClassHeader">
            <fieldcontrol class="QLineEdit" validator="" defaulttext="customermodel.h" placeholdertext="Enter a class name"/>
            <fielddescription>Model class header filename:</fielddescription>
        </field>
		<field name="EditWidgetClass">
            <fieldcontrol class="QLineEdit" validator="^[a-zA-Z0-9_]+$" defaulttext="CustomerEditWidget" placeholdertext="Enter a class name"/>
            <fielddescription>Edit widget:</fielddescription>
        </field>
        <field name="EditWidgetHeader">
            <fieldcontrol class="QLineEdit" validator="" defaulttext="customereditwidget.h" placeholdertext="Enter a class name"/>
            <fielddescription>Edit widget header filename:</fielddescription>
        </field>
	</fields>

    <validationrules>
        <validationrule condition='"%ClassName%" != "QDialog"'>
            <message>%ClassName% cannot be used as class name.</message>
        </validationrule>
    </validationrules>
</wizard>
